---
import Header from './Header.astro';
import Block from './Block.astro';
import type { MempoolBlock } from '@/server/mempool';

type Props = {
  blocks: Array<MempoolBlock>;
};

const { blocks } = Astro.props as Props;
---

<column>
  <Header />
  <row id="blocks" gap-="2">
    {blocks.map((block) => (
      <Block 
        id={block.height} 
        satsPerVByte={Math.round(block.extras.medianFee)}
        transactionCount={block.tx_count}
        amountSats={block.extras.totalFees}
      />
    ))}
  </row>
</column>

<style>
#blocks {
  width: 100vw;
  overflow-x: scroll;
  padding: 1lh 2ch;
}
</style>

